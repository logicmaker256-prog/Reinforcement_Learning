import gymnasium as gym
from stable_baselines3 import PPO
from stable_baselines3.common.vec_env import DummyVecEnv
from gymnasium.wrappers import RecordVideo
from IPython.display import Video
import os

# ---- å­¦ç¿’ç’°å¢ƒ ----
def make_env():
    return gym.make("LunarLander-v3")

env = DummyVecEnv([make_env])

model = PPO("MlpPolicy", env, verbose=1)
model.learn(total_timesteps=200_000)
model.save("ppo_lunarlander")

# ---- å‹•ç”»ä¿å­˜ãƒ•ã‚©ãƒ«ãƒ€ ----
video_folder = "./videos"
os.makedirs(video_folder, exist_ok=True)

# ---- å‹•ç”»æ’®å½±ç”¨ç’°å¢ƒ ----
eval_env = gym.make("LunarLander-v3", render_mode="rgb_array")

eval_env = RecordVideo(
    eval_env,
    video_folder=video_folder,
    name_prefix="ppo_lander"
)

# ---- å‹•ç”»ç”Ÿæˆ ----
obs, info = eval_env.reset()
for _ in range(1000):
    action, _ = model.predict(obs, deterministic=True)
    obs, reward, terminated, truncated, info = eval_env.step(action)
    if terminated or truncated:
        break

eval_env.close()

# ---- æœ€æ–°ã®å‹•ç”»ã‚’è‡ªå‹•ã§å–å¾— ----
mp4_files = [f for f in os.listdir(video_folder) if f.endswith(".mp4")]
mp4_files.sort(key=lambda x: os.path.getmtime(os.path.join(video_folder, x)))

