# --------------------
# import
# --------------------
import gymnasium as gym
import numpy as np
import cv2
import os
import matplotlib.pyplot as plt
import imageio.v2 as imageio

from gymnasium import spaces
from stable_baselines3 import PPO
from stable_baselines3.common.vec_env import (
    DummyVecEnv,
    VecTransposeImage,
    VecFrameStack
)
from stable_baselines3.common.monitor import Monitor
from stable_baselines3.common.results_plotter import load_results, ts2xy
from IPython.display import Video

# --------------------
# ログ保存先
# --------------------
log_dir = "./logs"
os.makedirs(log_dir, exist_ok=True)

# ============================================
# Pixel Wrapper（84x84 RGB）
# ============================================
class PixelWrapper(gym.ObservationWrapper):
    def __init__(self, env, width=84, height=84):
        super().__init__(env)
        self.width = width
        self.height = height
        self.observation_space = spaces.Box(
            low=0, high=255, shape=(height, width, 3), dtype=np.uint8
        )

    def observation(self, obs):
        frame = self.env.render()
        frame = cv2.resize(frame, (self.width, self.height))
        return frame.astype(np.uint8)

# ============================================
# 学習用 環境生成
# ============================================
def make_train_env():
    env = gym.make("CartPole-v1", render_mode="rgb_array")
    env = PixelWrapper(env)
    env = Monitor(env, log_dir)
    return env

# ============================================
# VecEnv + FrameStack
# ============================================
env = DummyVecEnv([make_train_env])
env = VecTransposeImage(env)     # (HWC → CHW)
env = VecFrameStack(env, n_stack=4)  # ★最重要

print("Observation shape:", env.observation_space.shape)

# ============================================
# PPO（CNN）
# ============================================
model = PPO(
    policy="CnnPolicy",
    env=env,
    n_steps=1024,
    batch_size=128,
    learning_rate=1e-4,
    gamma=0.99,
    gae_lambda=0.95,
    ent_coef=0.01,
    verbose=1,
)

model.learn(total_timesteps=200_000)

# ============================================
# 学習曲線
# ============================================
x, y = ts2xy(load_results(log_dir), "timesteps")

plt.figure(figsize=(6,4))
plt.plot(x, y)
plt.xlabel("Timesteps")
plt.ylabel("Episode Reward")
plt.title("PixelCartPole + FrameStack Training Curve")
plt.grid()
plt.show()

# ============================================
# 動画用 環境（非Vec）
# ============================================
video_env = gym.make("CartPole-v1", render_mode="rgb_array")
obs, _ = video_env.reset()

frames = []
total_reward = 0
stack = []

for step in range(500):
    frame = video_env.render()
    frame_resized = cv2.resize(frame, (84, 84))

    if len(stack) < 4:
        stack = [frame_resized] * 4
    else:
        stack.pop(0)
        stack.append(frame_resized)

    obs_stack = np.concatenate(stack, axis=2)      # HWC
    obs_stack = np.transpose(obs_stack, (2, 0, 1)) # CHW
    obs_stack = obs_stack[np.newaxis, ...]

    action, _ = model.predict(obs_stack, deterministic=True)

    obs, reward, terminated, truncated, _ = video_env.step(action[0])
    total_reward += reward

    frames.append(frame)

    if terminated or truncated:
        break

video_env.close()

print("Evaluation Total Reward:", total_reward)

# ============================================
# mp4 保存（壊れない設定）
# ============================================
mp4_path = "pixel_cartpole_framestack.mp4"
imageio.mimsave(
    mp4_path,
    frames,
    fps=30,
    macro_block_size=1
)

Video(mp4_path)

# ============================================
# ★★★ 再生（ここが重要） ★★★
# ============================================
display(Video(mp4_path, embed=True))


# ============================================
# 代表フレーム
# ============================================
plt.figure(figsize=(4,4))
plt.imshow(frames[len(frames)//2])
plt.axis("off")
plt.title("Evaluation Frame")
plt.show()